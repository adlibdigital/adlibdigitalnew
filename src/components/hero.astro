---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Somos especialistas em projetos de TI e Comunicação. 
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Desde um simples website até soluções de pagamento, marketplace e projetos de telecomunicação.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://drive.google.com/file/d/1_FBSaWOh79imy0AxkPrt8p5G3kiQfbsc/view?usp=sharing"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

         Baixe Nossa Apresentação
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://wa.me//5511991001961?text=Tenho%20interesse%20em%20conversar%20sobre%20projetos%20para%20minha%20empresa."
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-whatsapp" />
         Entre em Contato
      </Link>
    </div>
  </div>
</main>
